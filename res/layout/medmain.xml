<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ZxingEncoderHandler" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="◎精簡型藥品電子履歷─"
        android:textColor="@color/red"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="27dp"
        android:text="只需要儲存製造商所提供的藥品基本內容，可供消費者查核的項目，並加上完整型電子履歷連結，讓消費者查詢藥品電子履歷可以一目瞭然。"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:text="___________________________________________"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnEn"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="32dp"
        android:text="解碼"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="※按下【解碼】以掃描藥品QR Code："
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="編碼"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="33dp"
        android:text="※按下【編碼】以輸入藥品基本內容："
        android:textColor="@color/blue"
        android:textSize="16sp" />

</RelativeLayout>
